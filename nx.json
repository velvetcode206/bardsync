{
  "$schema": "./node_modules/nx/schemas/nx-schema.json",
  "targetDefaults": {
    "build": {
      "dependsOn": [
        "^build"
      ],
      "cache": true
    },
    "start": {
      "dependsOn": [
        "build"
      ]
    },
    "bootRun": {
      "dependsOn": [
        "build"
      ]
    },
    "lint": {
      "cache": true
    },
    "e2e": {
      "cache": true
    },
    "test": {
      "cache": true
    }
  },
  "namedInputs": {
    "sharedGlobals": [
      "{workspaceRoot}/.github/workflows/**/*.yaml",
      "{workspaceRoot}/k8s/**/*.yaml"
    ],
    "default": [
      "sharedGlobals",
      "{projectRoot}/**/*"
    ],
    "production": [
      "default",
      "!{projectRoot}/src/test/**/*"
    ]
  },
  "plugins": [
    {
      "plugin": "@nx/gradle",
      "options": {
        "testTargetName": "test",
        "classesTargetName": "classes",
        "buildTargetName": "build"
      }
    }
  ]
}
