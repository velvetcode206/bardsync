{
  "compilerOptions": {
    "target": "es2020",
    "lib": ["ESNext", "DOM"],
    "rootDir": ".",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowJs": true,
    "strict": true,
    "declaration": false,
    "importHelpers": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipDefaultLibCheck": true,
    "skipLibCheck": true
  },
  "exclude": ["node_modules"]
}
